<div class="container">
  <div class="row"><h1> Call log for <%= @customer.name %> </h1></div>
  <div class="col-sm-3 col-md-2 sidebar">
    <ul class="nav nav-sidebar">

      <li>
        <i class="fa fa-home" aria-hidden="true">
          <%= link_to 'Home', customers_path %>
        </i>
      </li>
      <li>
        <i class="fa fa-book" aria-hidden="true">
          <%= link_to 'Customer Details', @customer %>
        </i>
      </li>
      <li>
        <i class="fa fa-calendar" aria-hidden="true">
          <%= link_to 'Make an appointment', new_customer_appointment_path(@customer) %>
        </i>
      </li>
    </ul>
  </div>
  <div class="col-md-8 col-md-offset-1 main">
    <%= form_for([@customer, @call_log]) do |f| %>
        <div class="row">
          <% if @call_log.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@call_log.errors.count, "error") %> prohibited this call_log from being saved:</h2>

                <ul>
                  <% @call_log.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
        </div>

        <div class="row">
          <div class="field">
            <div class="col-md-3">
              <%= f.label :calldate %>
            </div>
            <div class="col-md-4">
              <%= f.date_select :calldate, :order => [:month, :day, :year] %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="field">
            <div class="col-md-3">
              <%= f.label :caller %>
            </div>
            <div class="col-md-2">
              <%= f.text_field :caller %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="field">
            <div class="col-md-3">
              <%= f.label :comments %>
            </div>
            <div class="col-md-2">
              <%= f.text_area :comments %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-offset-5 col-md-2 ">
            <div class="actions">
              <%= f.submit %>
            </div>
          </div>
        </div>


    <% end %>

  </div>
</div>
