<h1>Editing
  <% if @customer.lead %>
      Lead
  <%else%>
      Account
  <% end %>
</h1>

<%= form_for(@customer) do |f| %>
    <% if @customer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

          <ul>
            <% @customer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :home_phone %>
      <%= f.text_field :home_phone %>
    </div>

    <div class="field">
      <%= f.label :cell_phone %>
      <%= f.text_field :cell_phone %>
    </div>


    <div class="field" id="ck-button">
        <span>  <%= f.label "Convert_lead?" %>
          <%= f.check_box :lead %> </span>

    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>


<%= link_to 'Show', @customer %> |
