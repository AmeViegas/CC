<div class="container">
  <div class="row"><h1> Edit Customer </h1></div>
  <div class="col-sm-3 col-md-2 sidebar">
    <ul class="nav nav-sidebar">

      <li>
        <i class="fa fa-home" aria-hidden="true">
          <%= link_to 'Home', customers_path %>
        </i>
      </li>
      <li>
        <i class="fa fa-book" aria-hidden="true">
          <%= link_to 'Customer Details', @customer %>
        </i>
      </li>
      <li>
        <i class="fa fa-phone" aria-hidden="true">
          <%= link_to 'Log a Call', new_customer_call_log_path(@customer) %>
        </i>
      </li>
      <li>
        <i class="fa fa-calendar" aria-hidden="true">
          <%= link_to 'Make an appointment', new_customer_appointment_path(@customer) %>
        </i>
      </li>
    </ul>
  </div>
  <div class="col-md-8 col-md-offset-1 main">
    <%= form_for(@customer) do |f| %>
        <div class="row">
          <% if @customer.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

                <ul>
                  <% @customer.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
        </div>
        <div class="row">
          <div class="field">
            <div class="col-md-3">
              <%= f.label :name %>
            </div>
            <div class="col-md-2">
              <%= f.text_field :name %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="field">
            <div class="col-md-3">
              <%= f.label :home_phone %>
            </div>
            <div class="col-md-2">
              <%= f.text_field :home_phone %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="field">
            <div class="col-md-3">
              <%= f.label :cell_phone %>
            </div>
            <div class="col-md-2">
              <%= f.text_field :cell_phone %>
            </div>
          </div>
        </div>

        <% if !@customer.account %>
            <div class="row">
              <div class="field">
                <div class="col-md-3">
                  <%= f.label "Convert to account?" %>
                </div>
                <div class="col-md-2">
                  <%= f.check_box :account %>
                </div>
              </div>
            </div>
        <% end %>
        <div class="row ">
          <div class="col-sm-offset-5 col-md-2 ">
            <div class="actions" >
              <%= f.submit %>
            </div>
          </div>

        </div>
    <% end %>
  </div>

</div>








