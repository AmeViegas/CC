<div class="container">
  <div class="row"><h1>Leads and Accounts </h1></div>

  <div class="col-sm-3 col-md-2 sidebar">
    <ul class="nav nav-sidebar">
      <li></li>

      <li class="active">
        <i class="fa fa-home" aria-hidden="true">
          <%= link_to 'Home', customers_path %>
        </i>
      </li>
      <li>
        <i class="fa fa-user" aria-hidden="true">
          <%= link_to 'New Lead/Acct', new_customer_path %>
        </i>
      </li>
    </ul>

  </div>
<div class="col-md-8 col-md-offset-1 main">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-3">
      <strong>Name</strong>
    </div>
    <div class="col-md-3">
      <strong>Status</strong>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-2"></div>
  </div>
  <hr />
  <% @customers.each do |customer| %>
      <div class="row">
        <div class="col-md-3"><%= customer.name %></div>
        <div class="col-md-2">
          <% if customer.account %>
              <div>Account</div>
          <% else %>
              <div>Lead</div>
          <% end %>
        </div>
        <div class="col-md-2 btn btn-default btn-xs"><%= link_to 'Info/Call/Appt', customer %></div>
        <div class="col-md-2 btn btn-default btn-xs"><%= link_to 'Edit Customer', edit_customer_path(customer) %></div>
      </div>
  <% end %>
</div>
</div>
